<!-- Use <VBRuntime>Default</VBRuntime> option - https://github.com/dotnet/roslyn/issues/28021 -->

<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <RootNamespace>ExcelFacade</RootNamespace>
    <TargetFramework>netstandard2.0</TargetFramework>
    <OptionStrict>Off</OptionStrict>
    <VBRuntime>Default</VBRuntime>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Authors>Jon Saffron</Authors>
    <Company>J Saffron Consulting Ltd</Company>
    <Description>A basic facade for Microsoft Excel.</Description>
    <PackageReleaseNotes>I originally wrote this for a project some years ago. It doesn't cover everything that can be done with Excel, but it does cover a lot of the essentials. Other ways of automating Excel are available!</PackageReleaseNotes>
    <Copyright>Jon Saffron 2008-2019</Copyright>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="JetBrains.Annotations" Version="2019.1.1" />
  </ItemGroup>

</Project>
